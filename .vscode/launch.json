
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Depurador para o VsCode (HTTPS)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/ApiCatalogo/bin/Debug/net9.0/ApiCatalogo.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/ApiCatalogo",  // Define o diretório onde o seu Program.cs está localizado
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "https://localhost:7072"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Catalogo MVC depurador",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CatalogoMvc/bin/Debug/net9.0/CatalogoMvc.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CatalogoMvc",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}

